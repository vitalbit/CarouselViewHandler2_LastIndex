<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselViewHandler2_LastIndex_Sample.MainPage"
             x:Name="This">

    <Grid BindingContext="{Binding Source={Reference This}}">
        <CarouselView ItemsSource="{Binding ImagesToDisplay}"
            Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding .}"/>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </Grid>

</ContentPage>
